@{
    ViewData["Title"] = "Home";
}
<div class="text-center mt-5">
    <h1 class="display-4">Welcome to RankTracker</h1>
    <p class="lead">Track your game ranks and monitor your progress!</p>

    <div class="d-flex justify-content-center gap-4 mt-4">
        <a class="btn btn-primary btn-lg px-5 py-3 shadow rounded-4" asp-controller="Game" asp-action="Index">
            🎮 View Games
        </a>
        <a class="btn btn-success btn-lg px-5 py-3 shadow rounded-4" asp-controller="RankEntry" asp-action="Index">
            🏆 View Rank Entries
        </a>
        <a class="btn btn-danger btn-lg px-5 py-3 shadow rounded-4" asp-controller="Home" asp-action="Dashboard">
            📈 Dashboard
        </a>
    </div>

</div>

